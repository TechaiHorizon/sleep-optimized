---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
	.filter(post => !post.slug.includes('first-post') && !post.slug.includes('second-post') && !post.slug.includes('third-post') && !post.slug.includes('markdown-style-guide') && !post.slug.includes('using-mdx'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<style>
				.hero {
					text-align: center;
					padding: 4rem 0;
					max-width: 800px;
					margin: 0 auto;
				}
				.hero h1 {
					font-size: 3.5rem;
					font-weight: 700;
					line-height: 1.1;
					margin-bottom: 1rem;
					background: linear-gradient(45deg, #4facfe 0%, #00f2fe 100%);
					-webkit-background-clip: text;
					-webkit-text-fill-color: transparent;
					background-clip: text;
				}
				.tagline {
					font-size: 1.5rem;
					color: rgb(var(--gray-light));
					margin-bottom: 1.5rem;
				}
				.hero-description {
					color: rgb(var(--gray));
					font-size: 1.125rem;
					line-height: 1.6;
					max-width: 600px;
					margin: 0 auto 2rem;
				}
				.cta {
					display: inline-block;
					padding: 1rem 2rem;
					background: linear-gradient(45deg, #4facfe 0%, #00f2fe 100%);
					color: white;
					text-decoration: none;
					border-radius: 8px;
					font-weight: 600;
					margin-top: 1rem;
					transition: transform 0.2s;
				}
				.cta:hover {
					transform: translateY(-2px);
				}
				.featured-posts {
					margin-top: 4rem;
					max-width: 1000px;
					margin-left: auto;
					margin-right: auto;
				}
				.featured-posts h2 {
					font-size: 2rem;
					margin-bottom: 2rem;
					text-align: center;
				}
				.post-grid {
					display: grid;
					gap: 2rem;
					margin-top: 2rem;
				}
				.post-card {
					background: rgba(255, 255, 255, 0.05);
					border-radius: 12px;
					padding: 1.5rem;
					transition: transform 0.2s, background 0.2s;
				}
				.post-card:hover {
					transform: translateY(-4px);
					background: rgba(255, 255, 255, 0.08);
				}
				.post-card h3 {
					margin-top: 0.5rem;
					font-size: 1.5rem;
					margin-bottom: 0.5rem;
				}
				.post-card a {
					color: white;
					text-decoration: none;
				}
				.post-date {
					color: rgb(var(--gray));
					font-size: 0.875rem;
				}
				.post-description {
					color: rgb(var(--gray-light));
					margin-top: 0.5rem;
				}
			</style>

			<div class="hero">
				<h1>Sleep Optimized</h1>
				<p class="tagline">Unlock Peak Performance Through Better Sleep</p>
				<p class="hero-description">
					Your ultimate guide to sleep biohacking and optimization. We cover the science, 
					technology, and strategies to help you unlock peak performance and recovery through better sleep.
				</p>
				<a href="/blog" class="cta">Explore Guides â†’</a>
			</div>

			<div class="featured-posts">
				<h2>Latest Guides</h2>
				<div class="post-grid">
					{
						posts.map((post) => (
							<div class="post-card">
								<div class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</div>
								<h3>
									<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
								</h3>
								<p class="post-description">{post.data.description}</p>
							</div>
						))
					}
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
