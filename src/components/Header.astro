---
import { SITE_TITLE } from '../consts';
---

<header class="nav-bar">
	<nav class="nav-container">
		<a href="/" class="nav-logo">
			<span class="logo-icon">ðŸ§ </span>
			<span class="logo-text">{SITE_TITLE}</span>
		</a>
		
		<div class="nav-menu">
			<a href="/blog" class="nav-link">Articles</a>
			<a href="/blog" class="nav-link">Guides</a>
			<a href="/about" class="nav-link">About</a>
		</div>

		<a href="#newsletter" class="nav-cta">Get Free Guide</a>
	</nav>
</header>

<style>
	.nav-bar {
		position: sticky;
		top: 0;
		z-index: 1000;
		background: rgba(10, 17, 40, 0.85);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border-bottom: 1px solid var(--color-border-subtle);
		padding: var(--space-4) 0;
		transition: all 0.3s ease;
	}

	.nav-container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 var(--space-6);
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		font-size: var(--text-xl);
		font-weight: var(--weight-bold);
		color: var(--color-text-primary);
		display: flex;
		align-items: center;
		gap: var(--space-2);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.nav-logo:hover {
		color: var(--color-accent-mint);
	}

	.logo-icon {
		font-size: 1.5rem;
	}

	.logo-text {
		background: linear-gradient(135deg, var(--color-accent-blue) 0%, var(--color-accent-purple) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.nav-menu {
		display: flex;
		gap: var(--space-8);
		align-items: center;
	}

	.nav-link {
		color: var(--color-text-secondary);
		font-weight: var(--weight-medium);
		font-size: var(--text-base);
		padding: var(--space-2) 0;
		position: relative;
		transition: color 0.3s ease;
		text-decoration: none;
	}

	.nav-link:hover {
		color: var(--color-accent-blue);
	}

	.nav-link::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--color-accent-blue);
		transition: width 0.3s ease;
	}

	.nav-link:hover::after {
		width: 100%;
	}

	.nav-cta {
		background: var(--gradient-button);
		color: var(--color-bg-primary);
		padding: var(--space-3) var(--space-6);
		border-radius: var(--radius-full);
		font-weight: var(--weight-semibold);
		transition: all 0.3s ease;
		text-decoration: none;
		font-size: var(--text-base);
	}

	.nav-cta:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-glow-mint);
		color: var(--color-bg-primary);
	}

	@media (max-width: 768px) {
		.nav-menu {
			display: none;
		}

		.nav-cta {
			padding: var(--space-2) var(--space-4);
			font-size: var(--text-sm);
		}
	}
</style>
